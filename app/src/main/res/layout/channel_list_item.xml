<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/circularImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            tools:src="@drawable/no_image"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/black"
            app:civ_shadow_radius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/cl_2"
            app:layout_constraintLeft_toRightOf="@id/circularImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_channel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/cl_2"
                tools:text="BB ki Vines" />

            <TextView
                android:id="@+id/tv_channel_desc"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#1C1C1C"
                android:ellipsize="end"
                android:maxLines="4"
                app:layout_constraintStart_toStartOf="@+id/tv_channel_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_channel_title"
                tools:text="This channel shows the adult comedy videos and all the characters shown in the
                    video played by bhuvan bam 1 person to many characters" />

            <TextView
                android:id="@+id/tv_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/tv_channel_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_channel_desc"
                tools:text="2010-03-15" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_channel_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_channel_desc"
                tools:text="19:51:57" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>